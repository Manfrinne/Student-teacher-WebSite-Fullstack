{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
  <section class="information">
      <h3>Informações do Estudante</h3>

      <div class="item">
          <div>Estudante</div>
          <div>{{student.name}}</div>
      </div>
      <div class="item">
          <div>Idade</div>
          <div>{{student.age}}</div>
      </div>
      <div class="item">
          <div>Nível Acadêmico</div>
          <div>{{student.academic_level}}</div>
      </div>
      <div class="item">
          <div>Aulas</div>
          <div>{{"Presencial" if student.class_type === "P"
            else "EAD"}}</div>
      </div>
      <div class="item">
          <div>Disciplinas Ministradas</div>
          <div>
            {% for discipline in student.disciplines %}
              <span> {{discipline}} </span>
            {% endfor %}
          </div>
      </div>
      <a href="/students/{{student.id}}/edit" class="button">Editar</a>

  </section>
</div>

{% endblock %}
