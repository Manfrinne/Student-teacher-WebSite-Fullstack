<div class="item">
    <div>Avatar URL</div>
    <div>
      <input type="url" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}">
    </div>
</div>
<div class="item">
    <div>Nome</div>
    <div>
      <input type="text" name="name" placeholder="Nome completo" value="{{student.name}}">
    </div>
</div>
<div class="item">
    <div>Nascimento</div>
    <div>
      <input type="date" name="birth" value="{{student.birth}}">
    </div>
</div>
<div class="item">
    <div>Nível Acadêmico</div>
    <div>
      <select name="academic_level">
        <option value="university" {% if student.academic_level === "university" %} selected {% endif %}>Graduação</option>
        <option value="masters" {% if student.academic_level === "masters" %} selected {% endif %}>Mestrado</option>
        <option value="doctorate" {% if student.academic_level === "doctorate" %} selected {% endif %}>Doutorado</option>
      </select>
    </div>
</div>
<div class="item">
    <div>Aulas</div>
    <div>
      <span><input type="radio" name="class_type" value="P"
      {% if student.class_type === "P" %} checked {% endif %}>Presencial</span>
      <span><input type="radio" name="class_type" value="E"
      {% if student.class_type === "E" %} checked {% endif %}>EAD</span>
    </div>
</div>
<div class="item">
    <div>Disciplinas Ministradas</div>
    <div>
      <input type="text" name="disciplines" placeholder="Separe suas disciplinas com vírgula" value="{{student.disciplines}}">
    </div>
</div>


