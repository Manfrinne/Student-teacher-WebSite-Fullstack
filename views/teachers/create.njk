{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/1544061/500x500)"></section>
    <section class="information">
        <h3>Novo Professor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
              <input type="url" name="avatar_url" placeholder="http://" value="">
            </div>
        </div>
        <div class="item">
            <div>Nome</div>
            <div>
              <input type="text" name="name" placeholder="Nome completo">
            </div>
        </div>
        <div class="item">
            <div>Nascimento</div>
            <div>
              <input type="date" name="birth" value="">
            </div>
        </div>
        <div class="item">
            <div>Nível Acadêmico</div>
            <div>
              <select name="academic_level">
                <option value="university">Graduação</option>
                <option value="masters">Mestrado</option>
                <option value="doctorate">Doutorado</option>
              </select>
            </div>
        </div>
        <div class="item">
            <div>Aulas</div>
            <div>
              <span><input type="radio" name="class_type">Presencial</span>
              <span><input type="radio" name="class_type">EAD</span>
            </div>
        </div>
        <div class="item">
            <div>Disciplinas Ministradas</div>
            <div>
              <input type="text" name="disciplines" placeholder="Separe suas disciplinas com vírgula">
            </div>
        </div>

        <button type="submit">Salvar</button>

    </section>
</form>

{% endblock %}
